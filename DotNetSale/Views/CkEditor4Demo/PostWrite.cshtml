<h2>/CkEditor4Demo/PostWrite</h2>

@await Html.PartialAsync("menu")

<h1>블로그 글쓰기</h1>

<form action="/CkEditor4Demo/PostWrite" method="post">

    <div class="form-group">
        <label class="col-sm-2 control-label" for="title">제목: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" placeholder="제목" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="editor">내용: </label>
        <div class="col-sm-10">
            <textarea id="editor" name="editor" cols="80" rows="10" ></textarea>
            <script src="~/vendor/ckeditor/ckeditor.js"></script>
            <script>
                CKEDITOR.replace("editor", {
                    height: '300px',
                    filebrowserImageUploadUrl: '/CkEditor4Demo/UploadImage'
                });
            </script>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">글쓰기</button>
        </div>
    </div>
</form>

@Html.Raw(ViewBag.EditorText) 